import javax.swing.JOptionPane;

class metodo{
    void llenar(int v[], int x){
        
        for (int i = 0; i < x; i++) {
            v[i] = (int) (Math.random()*20) + 1;
        }
    }
    int sumar(int v[], int i){
        if(i==0) return v[i];
        else return v[i]+sumar(v,i-1);
    }
}
